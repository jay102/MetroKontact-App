<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp">

        <GridLayout
            android:id="@+id/grid1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:rowCount="2">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:elevation="8dp"
                app:cardBackgroundColor="#0e8bcb"
                app:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/registered_biz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="REGISTERED BIZS"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/registered_biz_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/registered_biz"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textColor="@color/colorWhite"
                        android:textSize="75sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/registered_biz_no"
                        android:gravity="center|bottom"
                        android:id="@+id/reg_biz_date"
                        android:text="Updated"
                        android:textColor="@color/colorWhite" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:elevation="8dp"
                app:cardBackgroundColor="#7264bc"
                card_view:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/online_payments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="ONLINE PAYMENTS"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/online_payments_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/online_payments"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingTop="15dp"
                        android:text="N0.00"
                        android:textColor="@color/colorWhite"
                        android:textSize="45sp"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/online_payments_no"
                        android:gravity="center|bottom"
                        android:text="Updated 11/09/2017"
                        android:textColor="@color/colorWhite" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:elevation="8dp"
                app:cardBackgroundColor="#fd6b9c"
                card_view:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/activated_biz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="ACTIVATED BIZS"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/activate_business_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activated_biz"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textColor="@color/colorWhite"
                        android:textSize="75sp"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/activate_business_no"
                        android:gravity="center|bottom"
                        android:text="Updated:No activated business"
                        android:textColor="@color/colorWhite" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:elevation="8dp"
                app:cardBackgroundColor="#93cf78"
                card_view:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/bank_payments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="BANK PAYMENTS"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/bank_payments_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bank_payments"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingTop="15dp"
                        android:text="N0.00"
                        android:textColor="@color/colorWhite"
                        android:textSize="45sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/bank_payments_no"
                        android:gravity="center|bottom"
                        android:text="Updated 11/09/2017"
                        android:textColor="@color/colorWhite" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </GridLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>