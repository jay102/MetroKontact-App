<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view1"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:elevation="8dp"
                    app:cardBackgroundColor="#0e8bcb"
                    app:contentPadding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/registered_biz"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="REGISTERED BIZS"
                            android:textColor="@color/colorWhite" />

                        <TextView
                            android:id="@+id/registered_biz_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/registered_biz"
                            android:gravity="center_horizontal"
                            android:text="Loading..."
                            android:textColor="@color/colorWhite"
                            android:textSize="45sp" />

                        <TextView
                            android:id="@+id/reg_biz_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/registered_biz_no"
                            android:gravity="center|bottom"
                            android:textColor="@color/colorWhite"
                            tools:text="Updated" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view2"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:elevation="8dp"
                    app:cardBackgroundColor="#fd6b9c"
                    card_view:contentPadding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/activated_biz"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="ACTIVATED BIZS"
                            android:textColor="@color/colorWhite" />

                        <TextView
                            android:id="@+id/activate_business_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/activated_biz"
                            android:gravity="center_horizontal"
                            android:text="Loading.."
                            android:textColor="@color/colorWhite"
                            android:textSize="45sp"

                            />

                        <TextView
                            android:id="@+id/no_activated_biz"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/activate_business_no"
                            android:gravity="center|bottom"
                            android:textColor="@color/colorWhite"
                            tools:text="Updated:No activated business" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view3"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:elevation="8dp"
                    app:cardBackgroundColor="#7264bc"
                    card_view:contentPadding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/online_payments"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="ONLINE PAYMENTS"
                            android:textColor="@color/colorWhite" />

                        <TextView
                            android:id="@+id/online_payments_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/online_payments"
                            android:gravity="center"
                            android:paddingLeft="8dp"

                            android:text="Loading..."
                            android:textColor="@color/colorWhite"
                            android:textSize="40sp" />

                        <TextView
                            android:id="@+id/online_payment_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/online_payments_no"
                            android:gravity="center|bottom"
                            android:textColor="@color/colorWhite"
                            tools:text="Updated 11/09/2017" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/card_view4"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:elevation="8dp"
                    app:cardBackgroundColor="#93cf78"
                    card_view:contentPadding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/bank_payments"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="BANK PAYMENTS"
                            android:textColor="@color/colorWhite" />

                        <TextView
                            android:id="@+id/bank_payments_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/bank_payments"
                            android:gravity="center"
                            android:paddingLeft="8dp"
                            android:text="Loading..."
                            android:textColor="@color/colorWhite"
                            android:textSize="40sp" />

                        <TextView
                            android:id="@+id/bank_payments_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/bank_payments_no"
                            android:gravity="center|bottom"
                            android:textColor="@color/colorWhite"
                            tools:text="Updated 11/09/2017" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view5"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:elevation="8dp"
                    app:cardBackgroundColor="@color/colorRed"
                    card_view:contentPadding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/expired_biz"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="EXPIRED BIZ"
                            android:textColor="@color/colorWhite" />

                        <TextView
                            android:id="@+id/expired_biz_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/expired_biz"
                            android:gravity="center"
                            android:paddingLeft="8dp"
                            android:text="Loading..."
                            android:textColor="@color/colorWhite"
                            android:textSize="40sp" />

                        <TextView
                            android:id="@+id/expired_biz_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/expired_biz"
                            android:gravity="center|bottom"
                            android:textColor="@color/colorWhite"
                            tools:text="Updated 11/09/2017" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>